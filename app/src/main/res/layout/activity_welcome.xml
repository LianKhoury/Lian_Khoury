<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#22EAD9"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".WelcomeActivity">


    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/textGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/lobster"
            android:text="@string/book_genres"
            android:textColor="@color/black"
            android:textSize="32sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textGrid"
            android:layout_alignBottom="@+id/textGrid"
            android:layout_marginTop="42dp"
            android:layout_marginBottom="-47dp"
            android:fontFamily="serif"
            android:text="you're only one book away from a good mood :)"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="18dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <GridLayout
            android:id="@+id/GridW"
            android:columnCount="2"
            android:rowCount="10"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_weight="11"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="14dp"
            >


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/classicbooksimg"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Classic Books"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:fontFamily="@font/lobster"/>




            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        </GridLayout>

    </RelativeLayout>


</ScrollView>

